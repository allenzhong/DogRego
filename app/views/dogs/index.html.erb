<%= content_for(:page_header) do %>
  
  <%= link_to 'New Dog', new_dog_path, class: 'btn btn-primary' %>
  <div class="pull-right">  
    Your Dogs
  </div>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td>
          <%= dog.name %>
          <% if dog.registered? %>
            <button type="button" class="pull-right btn btn-success btn-circle" data-toggle="tooltip" data-placement="right" title="Ownership registered">
              <i class="fa fa-address-card-o" aria-hidden="true"></i>
            </button>    
          <% else %>
            <%= link_to register_dog_path(dog), class: 'pull-right btn btn-warning btn-circle' do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          <% end %>

        </td>
        <td><%= dog.breed %></td>
        <td><%= dog.date_of_birth_on %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Delete', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


